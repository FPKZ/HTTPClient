{
  "name": "HTTPClient",
  "private": true,
  "version": "1.0.20",
  "description": "HTTPClient - Ferramenta de testes de API",
  "author": "FPKZ <contato@fpkz.com.br>",
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "concurrently \"vite\" \"wait-on tcp:5173 && electron .\"",
    "electron": "electron .",
    "build": "vite build",
    "build:full": "vite build && electron-builder --win --linux",
    "build:electron": "vite build && electron-builder",
    "build:win": "vite build && electron-builder --win",
    "build:linux": "vite build && electron-builder --linux",
    "build:mac": "vite build && electron-builder --mac",
    "build:all": "vite build && electron-builder --win --linux --mac",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "build": {
    "appId": "com.httpclient",
    "productName": "HTTPClient",
    "artifactName": "${productName}-${version}-${os}.${ext}",
    "directories": {
      "output": "dist_electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "assets/**/*",
      "package.json"
    ],
    "win": {
      "icon": "assets/icon1.png",
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "icon": "assets/icon1.png",
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "mac": {
      "icon": "assets/icon1.png",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "publish": {
      "provider": "github",
      "owner": "FPKZ",
      "repo": "HTTPClient"
    },
    "nsis": {
      "oneClick": true,
      "allowToChangeInstallationDirectory": false,
      "deleteAppDataOnUninstall": true,
      "installerHeaderIcon": "assets/icon1.png"
    }
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/modifiers": "^9.0.0",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@monaco-editor/react": "^4.7.0",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-progress": "^1.1.8",
    "@tailwindcss/postcss": "^4.1.18",
    "autoprefixer": "^10.4.23",
    "axios": "^1.13.2",
    "bootstrap": "^5.3.8",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.3",
    "electron-context-menu": "^4.1.1",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.6.2",
    "form-data": "^4.0.5",
    "lucide-react": "^0.562.0",
    "postcss": "^8.5.6",
    "react": "^19.2.0",
    "react-bootstrap": "^2.10.10",
    "react-dom": "^19.2.0",
    "react-router-dom": "^7.11.0",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.18",
    "tailwindcss-animate": "^1.0.7",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^25.0.3",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "concurrently": "^9.2.1",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "nodemon": "^3.1.11",
    "vite": "^7.2.4",
    "wait-on": "^9.0.3"
  }
}
